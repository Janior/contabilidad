<div class="form">
  <%= form_for(@contribuyente) do |f| %>
  <% if @contribuyente.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@contribuyente.errors.count, "error") %> prohibited this contribuyente from being saved:</h2>

    <ul>
      <% @contribuyente.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field form-group col-md-3 col-sm-3 col-xs-6">
    <%= f.label :nit, "Nit (*)" %>
    <%= f.text_field :nit, class:"form-control" %>
  </div>
  <div class="field form-group col-md-9 col-sm-9 col-xs-6">
    <%= f.label :nombre, "Apellidos y Nombres o Razón Social (*)" %>
    <%= f.text_field :nombre, class:"form-control" %>
  </div>
  <div class="field form-group col-md-4 col-sm-4 col-xs-6">
    <%= f.label :calle, "No. ó nombre de calle ó avenida (*)" %>
    <%= f.text_field :calle, class:"form-control" %>
  </div>
  <div class="field form-group col-md-4 col-sm-4 col-xs-6">
    <%= f.label :no_casa, "Numero de Casa (*)"  %>
    <%= f.text_field :no_casa, class:"form-control" %>
  </div>
  <div class="field form-group col-md-4 col-sm-4 col-xs-6">
    <%= f.label :apto_similar, "Apto. o Similar" %>
    <%= f.text_field :apto_similar, class:"form-control" %>
  </div>
  <div class="field form-group col-md-3 col-sm-3 col-xs-6">
    <%= f.label :zona, "Zona (*)"%>
    <%= f.number_field :zona, class:"form-control" %>
  </div>
  <div class="field form-group col-md-3 col-sm-3 col-xs-6">
    <%= f.label :colonia, "Colonia o Barrio" %>
    <%= f.text_field :colonia, class:"form-control" %>
  </div>
  <div class="field form-group  col-md-3 col-sm-3 col-xs-6">
    <%= f.label :departamento, "Departamento (*)" %>
    <%= f.text_field :departamento, class:"form-control" %>
  </div>
  <div class="field form-group col-md-3 col-sm-3 col-xs-6">
    <%= f.label :municipio, "Municipio (*)" %>
    <%= f.text_field :municipio, class:"form-control" %>
  </div>
  <div class="field form-group col-md-3 col-sm-3 col-xs-6">
    <%= f.label :telefono, "Telefono (*)" %>
    <%= f.text_field :telefono, class:"form-control" %>
  </div>
  
  <div class="field form-group col-md-3 col-sm-3 col-xs-6">
    <%= f.label :fax, "Fax" %>
    <%= f.text_field :fax, class:"form-control" %>
  </div>
  <div class="field form-group col-md-3 col-sm-3 col-xs-6">
    <%= f.label :apto_postal, "Apartado Postal" %>
    <%= f.text_field :apto_postal, class:"form-control" %>
  </div>
  <div class="field form-group col-md-3 col-sm-3 col-xs-6">
    <%= f.label :email, "E-mail" %>
    <%= f.text_field :email, class:"form-control" %>
  </div>
  <%= link_to content_tag(:i ,' Volver' ,class:"glyphicon glyphicon-arrow-left "), contribuyentes_path , class:"btn btn-normal col-md-offset-3 col-md-2 col-sm-offset-3 col-sm-2"%>
  <div class="actions">
  <%= button_tag(type: "submit", class: "btn btn-success col-md-2 col-sm-2") do %>
    <i class="glyphicon glyphicon-floppy-disk"></i> Guardar 
    <% end %>
  <%= button_tag(type: "reset", class: "btn btn-danger col-md-2 col-sm-2") do %>
    <i class="glyphicon glyphicon-floppy-remove"></i> Reiniciar 
    <% end %>
    
  </div>
  <% end %>
</div>