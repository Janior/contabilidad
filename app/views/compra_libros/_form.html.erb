<div class="col-sm-12 col-md-12 col-lg-12">
    <span>Contribuyente: <span class="text-muted"><strong><%= @contribuyente_nombre %></strong></span></span>
    <span>Establecimiento: <span class="text-muted"><strong><%= @establecimiento_nombre %></strong></span></span>
    <%= link_to  operaciones_libro_compra_path , class:"col-md-offset-3" do %>
    Ver Resumen del Libro de Compras <i class="fa fa-print"></i>
    <%end%>
</div>


<%= form_for(@compra_libro, html: {autocomplete: "off"}) do |f| %>
<% if @compra_libro.errors.any? %>
<div class="alert alert-danger alert-dismissable col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
  <% @compra_libro.errors.full_messages.each do |mensaje|%>
  <%= mensaje%>
  <%end%>
</div>

<% end %>
<%= f.hidden_field :establecimiento_id, value: current_usuario.establecimiento_id %>
<%= f.hidden_field :contribuyente_id, value: current_usuario.contribuyente_id %>
<div class="field form-group col-xs-6 col-sm-2 col-md-2 col-lg-2">
    <%= f.label :documento, "Documento(*)",class:"control-label" %>
    <select name="compra_libro[documento]" class="form-control" id="compra_libro_documento" required>
        <option value="" selected="selected"></option>
        <option value="DA">DA</option>
        <option value="FA">FA</option>
        <option value="FC">FC</option>
        <option value="FE">FE</option>
        <option value="FO">FO</option>
        <option value="NC">NC</option>
        <option value="ND">ND</option>
    </select>
</div>
<div class="field form-group col-xs-6 col-sm-3 col-md-3 col-lg-3">
    <label class:"control-label" >Tipo de Documento(*)</label>
    <input type="text" id="tipo-documento" class="form-control" disabled>
</div>
<div class="field form-group col-xs-6 col-sm-1 col-md-1 col-lg-1">
    <%= f.label :serie, "Serie(*)",class:"control-label" %>
    <%= f.text_field :serie, class:"form-control", required:true %>
</div>
<div class="field form-group col-xs-6 col-sm-2 col-md-2 col-lg-2 ">
    <%= f.label :numero, "Numero(*)",class:"control-label" %>
    <%= f.text_field :numero, class:"form-control", required:true %>
</div>
<div class="field form-group col-xs-6 col-sm-1 col-md-1 col-lg-1 ">
    <%= f.label :dia, "Dia(*)",class:"control-label" %>
    <%= f.text_field :dia, class:"form-control", required:true %>
</div>
<div class="field form-group col-xs-6 col-sm-2 col-md-2 col-lg-2 ">
    <%= f.label :mes, "Mes(*)", class:"control-label" %>
    <%= f.text_field :mes, readonly:"readonly", class:"form-control", value:current_usuario.mes, required:true %>
</div >
<div class="field form-group col-xs-6 col-sm-1 col-md-1 col-lg-1 ">
    <%= f.label :year, "AÃ±o(*)", class:"control-label"%>
    <%= f.text_field :year, readonly:"readonly", class:"form-control", value:current_usuario.year, required:true %>
</div>
<div class="field form-group col-xs-6 col-sm-4 col-md-4 col-lg-4">
    <%= f.label :proveedor_nit,"Nit(*)", class:"control-label" %>
    <%= f.text_field :proveedor_nit, id:"compras_proveedor_nit", class:"form-control", autocomplete:"off", required:true  %>
</div>
<div class="field form-group col-xs-6 col-sm-4 col-md-4 col-lg-4 ">
    <%= f.label :proveedor_nombre, "Nombre Proveedor(*)", class:"control-label" %>
    <%= f.text_field :proveedor_nombre, id:"compras_proveedor_nombre" , class:"form-control", required:true%>
</div>
<div class="field form-group col-xs-6 col-sm-4 col-md-4 col-lg-4 ">
    <%= f.label :tipo_de_gasto, "Tipo de Gasto", class:"control-label"%>
    <%= f.text_field :tipo_de_gasto, class:"form-control", id:"compra_libro_tipo_de_gasto", required:true %>
</div>
<div class="col-xs-12 col-sm-offset-2 col-md-offset-2 col-sm-4 col-md-4 col-lg-4">
    <h5 class="text-center">Valor Gravado</h5>
    <div class="field form-group col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <%= f.label :gravado_bienes, "Bienes", class:"control-label" %>
        <%= f.text_field :gravado_bienes, class:"form-control gravado gravado-bienes",required:true %>
    </div>
    <div class="field form-group col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
        <%= f.label :gravado_servicios, "Servicios", class:"control-label" %>
        <%= f.text_field :gravado_servicios, class:"form-control gravado gravado-servicios" ,required:true %>
    </div>
</div>
<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
    <h5 class="text-center">Valor Exento</h5>
    <div class="field form-group col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <%= f.label :exento_bienes, "Bienes",class:"control-label" %>
        <%= f.text_field :exento_bienes, class:"form-control exento exento-bienes" ,required:true %>
    </div>
    <div class="field form-group col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
        <%= f.label :exento_servicios, "Servicios",class:"control-label" %>
        <%= f.text_field :exento_servicios, class:"form-control exento exento-servicios" ,required:true %>
    </div>
</div>

<%=  f.hidden_field :base, class:"base-iva" %>
<%=  f.hidden_field :iva, class:"base-iva" %>
<div class="actions col-md-12 col-sm-12 col-xs-12">

    <% if @u.contribuyente_id.nil? %>
    <%= button_tag(type: "submit", class: "btn btn-success col-sm-offset-3 col-xs-12 col-md-3 col-sm-3", disabled: true) do %>
    <i class="fa fa-save"></i> Guardar 
    <% end %>
    <% else %>
    <%= button_tag(type: "submit", class: "btn btn-success col-sm-offset-3 col-xs-12 col-md-3 col-sm-3", disabled: true) do %>
    <i class="fa fa-save"></i> Guardar 
    <% end %>
    <% end %>
    <%= button_tag(type: "reset", class: "btn btn-danger col-xs-12 col-md-3 col-sm-3") do %>
    <i class="fa fa-undo"></i> Reiniciar 
    <% end %>
</div>
<% end %>