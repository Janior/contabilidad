<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="8"></th>
      <% if Contribuyente.find(@u.contribuyente_id).t_contribuyente == "normal" %>
      <th colspan="2" class="text-center">Valor Gravado</th>
      <% else %>
      <th colspan="2" class="text-center">Valor Exento</th>
      <% end %>
      <th colspan="4"></th>
    </tr>
    <tr>
      <th>Doc</th>
      <th>Serie</th>
      <th>Numero</th>
      <th>Mes</th>
      <th>Nit</th>
      <th>Nombre</th>
      <th>Base</th>
      <th>Iva</th>
      <th>Bienes</th>
      <th>Servicios</th>
      <th>Total</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
    <tr class="no-border-top">
      <td><%= compra.documento %></td>
      <td><%= compra.serie %></td>
      <td><%= compra.numero %></td>
      <td><%= compra.mes %></td>
      <td><%= compra.proveedor.nit %></td>
      <td><%= compra.proveedor.nombre %></td>
      <td><%= compra.base %></td>
      <td><%= compra.iva %></td>
      <td><%= compra.bienes %></td>
      <td><%= compra.servicios %></td>
      <td><%= compra.total %></td>
      <td class="td-btn">
        <%= link_to content_tag(:i ,'',class:"fa fa-eye"), compra ,class:"btn btn-default col-md-12 text-center"%>
      </td>
      <td class="td-btn">
        <%= link_to content_tag(:i ,'',class:"fa fa-pencil"), edit_compra_libro_path(compra) ,class:"btn btn-info col-md-12 text-center" %>
      </td>
      <td class="td-btn">
        <%= link_to content_tag(:i ,'',class:"fa fa-trash-o"), compra, method: :delete, data: { confirm: 'Estas seguro?' },class:"btn btn-danger col-md-12 text-center no-window" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
