<div id="libro_compras" class="col-sm-12 col-md-12 col-lg-12">
  <h5 class="col-sm-10 col-md-10 col-lg-10" style="color:green;"><%= @contribuyente_nombre%></h5>
  <span class="col-sm-2 col-md-2 col-lg-2">Fecha: <strong><%= @fecha%></strong></span>
  <p class="col-sm-10 col-md-10 col-lg-10"><strong> <%= @establecimiento_nombre%></strong></p>
  <span class="col-sm-2 col-md-2 col-lg-2">Hora: <strong><%= @hora %></strong></span>
  <p class="col-sm-12 col-md-12 col-lg-12">Nit:  <strong><%= @contribuyente_nit%></strong></p>
  <span class="col-sm-2 col-md-2 col-lg-2">Periodo:  <strong><%= current_usuario.mes %></strong> - <strong><%= current_usuario.year %></strong></span>
  <span class="col-sm-8 col-md-8 col-lg-8 text-center"><h5>Libro de Compras y Servicios Recibidos</h5></span>
  <span class="col-sm-2 col-md-2 col-lg-2">Folio: </span>

  <table class="table table-bordered table-responsive">
    <thead>
      <tr class="tr-sin-bordes">
        <th colspan="1"></th>
        <th colspan="1"></th>
        <th colspan="1"></th>
        <th colspan="1"></th>
        <th colspan="1"></th>
        <th colspan="1"></th>
        <th colspan="2">Base Gravada</th>
        <th colspan="2">Base Exenta</th>
        <th colspan="1"></th>
      </tr>
      <tr class="th-sin-bordes">
        <th>Dia</th>
        <th>Tipo</th>
        <th>Serie</th>
        <th>Numero</th>
        <th>Nit</th>
        <th>Nombre</th>
        <th>Bienes</th>
        <th>Bienes</th>
        <th>Servicios</th>
        <th>Servicios</th>
        <th>IVA</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.dia %></td>
        <td><%= compra.documento %></td>
        <td><%= compra.serie %></td>
        <td><%= compra.numero %></td>
        <td><%= compra.proveedor.nit %></td>
        <td><%= compra.proveedor.nombre %></td>
        <td><%= compra.gravado_bienes %></td>
        <td><%= compra.gravado_servicios %></td>
        <td><%= compra.exento_bienes %></td>
        <td><%= compra.exento_servicios %></td>
        <td><%= compra.iva %></td>
        <td><%= compra.total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>