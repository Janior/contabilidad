  <%= link_to  new_venta_libro_path, class:"col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center btn btn-primary pdf_link" do %>
  <i class="fa fa-angle-left"></i> Volver
  <%end%>
  <%= link_to  operaciones_libro_venta_path + ".pdf", class:"col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center btn btn-info pdf_link" do %>
  Ver Version Imprimible <i class="fa fa-print"></i>
  <%end%>
  <div id="libro_ventas" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div id="pdf-render">
      <div  class="col-xs-9 col-sm-10 col-md-10 col-lg-10">
        <strong><%= helper_contribuyente_nombre%></strong>
      </div>
      <div  class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
        Fecha: <strong><%= p_fecha%></strong>
      </div>
      <div  class="col-xs-9 col-sm-10 col-md-10 col-lg-10">
        Establecimiento: <strong><%= helper_establecimiento_nombre%>
      </strong>
    </div>
    <div  class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
      Hora: <strong><%= p_hora %></strong>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      Nit:  <strong><%= helper_contribuyente_nit %></strong>
    </div>
    <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3">
      Periodo:  <strong><%= current_usuario.mes %></strong> - <strong><%= current_usuario.year %></strong>
    </div>
    <div class="col-xs-6 col-sm-7 col-md-7 col-lg-7 ">
      <strong>Libro de Ventas</strong>
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
      Folio:
    </div>
  </div>
  <div class="clearfix visible-xs-block"></div>



  <table class="table table-bordered table-responsive">
    <thead>
      <tr class="tr-sin-bordes">
        <th colspan="1"></th>
        <th colspan="2">Documento</th>
        <th colspan="3">Documento</th>
        <th colspan="1"></th>
        <th colspan="1"></th>
        <th colspan="1"></th>
      </tr>
      <tr class="th-sin-bordes">
        <th>Dia</th>
        <th>Tipo</th>
        <th>Nit</th>
        <th>Del</th>
        <th>Al</th>
        <th>Serie</th>
        <th>Comprador</th>
        <th>Bienes Precio Neto</th>
        <th>Precio de Servicios</th>
      </tr>
    </thead>

    <tbody>
      <% @ventas.each do |venta| %>
      <tr class="no-border-top">
        <td><%= venta["dia"] %></td>
        <td><%= venta["documento"] %></td>
        <td><%= venta["nit"] %></td>
        <td><%= venta["min"] %></td>
        <td><%= venta["max"] %></td>
        <td><%= venta["serie"] %></td>
        <td><%= venta["nombre"] %></td>
        <td>Q<%= '%.2f' % venta["gravado_bienes"].to_f %></td>
        <td>Q<%= '%.2f' % venta["gravado_servicios"].to_f %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
        <tr class="tr-sin-bordes">
          <th colspan="2" class="text-center">Resumen por Cuenta Contable</th>
        </tr>
        <tr class="th-sin-bordes">
          <th>Nombre</th>
          <th>Suma de base</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>Bienes</td>
          <td>Q<%= '%.2f' % @bienes.to_f %></td>
        </tr>
        <tr>
        <td>Servicios</td>
          <td>Q<%= '%.2f' % @servicios.to_f %></td>
        </tr>
        <tr>
          <td>IVA</td>
          <td>Q<%= '%.2f' % @iva.to_f %></td>
        </tr>
        <tr>
          <td>Total</td>
          <td>Q<%= '%.2f' % @total.to_f %></td>
        </tr>
      </tbody>
    </table>

  </div>
</div>

