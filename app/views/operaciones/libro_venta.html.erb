<div id="libro_ventas">
  <span>Periodo: <strong> <%= current_usuario.mes%></strong></span>
<span>Nombre o Razon Social: <strong> <%= @establecimiento_nombre%></strong></span>
<span>Nit: <strong> <%= @contribuyente_nit%></strong></span>
<span><strong>Libro Ventas</strong></span>
<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th colspan="2">Documento</th>
      <th colspan="3">Documento</th>
      <th colspan=""></th>
    </tr>
    <tr>
      <th>Dia</th>
      <th>Tipo</th>
      <th>Nit</th>
      <th>Del</th>
      <th>Al</th>
      <th>Serie</th>
      <th>Comprador</th>
      <th>Bienes Precio Neto</th>
      <th>Precio de Servicios</th>
      <th>IVA Debito Fiscal</th>
    </tr>
  </thead>

  <tbody>
    <% @ventas.each do |venta| %>
      <tr>
      <td><%= venta.dia %></td>
      <td><%= venta.documento %></td>
      <td><%= venta.nit %></td>
      <td>          </td>
      <td>          </td>
      <td><%= venta.serie %></td>
      <td><%= venta.nombre %></td>
      <td><%= venta.gravado_bienes %></td>
      <td><%= venta.gravado_servicios %></td>
      <td><%= venta.iva %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>