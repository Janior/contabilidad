<%= render 'partials/libro' %>
<div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 fac-compra">
  <div class="panel panel-primary">
    <div class="panel-heading">Registro de Venta</div>
    <div class="panel-body">
      <p>
        <strong>Documento:</strong>
        <%= @venta_libro.documento %>
      </p>

      <p>
        <strong>Serie:</strong>
        <%= @venta_libro.serie %>
      </p>

      <p>
        <strong>Numero:</strong>
        <%= @venta_libro.numero %>
      </p>
      <p>
        <strong>Nit del Comprador:</strong>
        <%= @venta_libro.nit %>
      </p>

      <p>
        <strong>Nombre: del Comprador</strong>
        <%= @venta_libro.nombre %>
      </p>
      <p>
        <strong>Total:</strong>
        Q<%= @venta_libro.total %>
      </p>
      <p>
        <strong>Fecha:</strong>
        <%= @venta_libro.dia %>/<%= @venta_libro.mes %>/<%= @venta_libro.year %>
      </p>

    </div>
  </div>



  <nav class="col-md-4 col-sm-4 col-xs-4 col-lg-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4 col-lg-offset-4 ">
    <ul class="pager">
      <li class="previous">
        <%= link_to  new_venta_libro_path do %>

        <span aria-hidden="true">&larr;</span> Atras
        <%end%>
      </li>
      <li class="next">
        <%= link_to edit_venta_libro_path(@venta_libro) do %>
        Editar <i class="fa fa-pencil"></i>
        <%end%>
      </li>
    </ul>
  </nav>

