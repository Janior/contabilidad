Balance <i class="fa fa-angle-right"></i>
<%end%>
<div id="libro_compras" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div id="pdf-render">
        <div  class="col-xs-9 col-sm-10 col-md-10 col-lg-10">
            <strong><%= helper_contribuyente_nombre %></strong>
        </div>
        <div  class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
            Fecha: <strong><%= p_fecha%></strong>
        </div>
        <div  class="col-xs-9 col-sm-10 col-md-10 col-lg-10">
            <strong><%= helper_establecimiento_nombre %></strong>
        </div>
        <div  class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
            Hora: <strong><%= p_hora %></strong>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            Nit:  <strong><%= helper_contribuyente_nit%></strong>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3">
            Periodo:  <strong><%= print_meses_periodo %></strong>
        </div>
        <div class="col-xs-6 col-sm-7 col-md-7 col-lg-7 text-center">
            <strong>Libro Mayor</strong>
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            Folio:
        </div>
    </div>
    <div class="col-md-6 no-pad">
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                    <th colspan="5">Folio 1</th>
                </tr>
                <tr>
                    <th>Mes</th>
                    <th>No.</th>
                    <th>Descripción</th>
                    <th colspan="2"></th>
                </tr>

            </thead>
            <tbody>
                <% @cuentas.each do |nombre| %>
                <% if Cuenta.where(nombre_: nombre).sum(:debe) != "0.0" %>
                <tr>
                    <td colspan="5" class="bold"><%= Cuenta.where(nombre_: nombre).first.nombre %></td>
                </tr>
                <% Cuenta.where(nombre_: nombre).each do |cuenta| %>
                <% if cuenta.debe != "" && cuenta.debe!= "0.0"%>

                <tr>
                    <td><%= @u.mes %></td>
                    <td><%= cuenta.partida.dia %></td>
                    <td class="left border-grueso-right descripcion"><%= cuenta.partida.descripcion %></td>
                    <td>Q<%= '%.2f' % cuenta.debe.to_f %></td>
                    <td></td>
                </tr>

                <% end %>
                <% end %>
                <tr>
                    <td colspan="3" class="left border-grueso-right"></td>
                    <td class="termina-partida"></td>
                    <td class="termina-partida">Q<%= '%.2f' % Cuenta.where(nombre_: nombre).sum(:debe).to_f %></td>
                </tr>
                <% end %>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="col-md-6 no-pad">
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                    <th colspan="5">Folio 2</th>
                </tr>
                <tr>
                    <th>Mes</th>
                    <th>No.</th>
                    <th>Descripción</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                <% @cuentas.each do |nombre| %>
                <% if Cuenta.where(nombre_: nombre).sum(:haber) != "0.0" %>
                <tr>
                    <td colspan="5" class="bold"><%= Cuenta.where(nombre_: nombre).first.nombre %></td>
                </tr>
                <% Cuenta.where(nombre_: nombre).each do |cuenta| %>
                <% if cuenta.haber != "" && cuenta.haber!= "0.0"%>

                <tr>
                    <td><%= @u.mes %></td>
                    <td><%= cuenta.partida.dia %></td>
                    <td class="left border-grueso-right descripcion"><%= cuenta.partida.descripcion %></td>
                    <td>Q<%= '%.2f' % cuenta.haber.to_f %></td>
                    <td></td>
                </tr>
                <% end %>
                <% end %>
                <tr>
                    <td colspan="3" class="left border-grueso-right"></td>
                    <td class="termina-partida"></td>
                    <td class="termina-partida">Q<%= '%.2f' % Cuenta.where(nombre_: nombre).sum(:haber).to_f %></td>
                </tr>
                <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
