		<h4 class="text-center">Catalogos</h4>
		<i class="fa fa-plus fa-mas"></i>
		<div class="popover bottom">
			<div class="arrow"></div>
			<div class="popover-title">
				<h4>Opciones</h4>
			</div>
			<div class="popover-content">
				<%= link_to new_contribuyente_path do %>
				<i class="fa fa-user-plus"></i> Agregar nuevo Contribuyente
