				<% end %>
			</div>
		</div>

	</div>
	<div class="objeto col-md-4 col-lg-4">
		<i class="fa fa-book fa-grande"></i>
		<h4 class="text-center">Libros</h4>
		<i class="fa fa-plus fa-mas"></i>
		<div class="popover bottom">
			<div class="arrow"></div>
			<div class="popover-title">
				<h4>Opciones</h4>
			</div>
			<div class="popover-content">
				<%= link_to new_compra_libro_path do %>
				<i class="fa fa-shopping-cart"></i> Agregar Compra
				<% end %>
				<br>
				<%= link_to new_venta_libro_path do %>
				<i class="fa fa-line-chart"></i> Agregar Venta
				<% end %>
			</div>
		</div>

	</div>
	<div class="objeto col-md-4 col-lg-4">
		<i class="fa fa-cogs fa-grande"></i>
		<h4 class="text-center">Operaciones Especiales</h4>
		
		<div class="popover bottom">
			<div class="arrow"></div>
			<div class="popover-title">
				<h4>Opciones</h4>
			</div>
			<div class="popover-content">
				<a href="#"><i class="fa fa-user-plus"></i> Cambiar datos</a>
				<li>Dos</li>
				<li>Tres</li>
			</div>
		</div>

	</div>
