<div class="well sesiones col-xs-12 col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
  <h2 class="text-center">Registrarme</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= render 'partials/messages' %>

  <div class="field form-group">
    <%= f.label :username,"Nombre de Usuario" %><br />
    <%= f.text_field :username, autofocus: true, class:"form-control", autocomplete:"off" %>
  </div>
  <div class="field form-group">
    <%= f.label :email,"Email" %>
    <%= f.email_field :email, class:"form-control", autocomplete:"off" %>
  </div>

  <div class="field form-group">
    <%= f.label :password,"Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", autocomplete:"off" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, "Confirmar Contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class:"form-control", autocomplete:"off" %>
  </div>

  <div class="actions">
  <button type="submit" name="commit" class="btn btn-success col-xs-10 col-sm-8 col-md-8 col-lg-8 col-xs-offset-1 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
    Registrarme <i class="fa fa-plus"></i>
  </button>
  </div>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>
<style>
  body{
    background:  #757D75;
  }
</style>