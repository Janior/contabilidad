<h3 class="text-center">Editar mi cuenta</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
<div class="col-xs-12 col-sm-10 col-md-10 col-lg-10 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 row">
	
<div class="field col-xs-12 col-sm-8 col-md-8 col-lg-8 col-sm-offset-2 col-md-offset-2 col-lg-offset-2 form-group">
  <%= f.label :username %>
  <%= f.text_field :username, disabled:true, class:"form-control"%>
</div>
<div class="field col-xs-12 col-sm-6 col-md-4 col-lg-4 form-group">
<%= f.label :nombre %>
  <%= f.text_field :nombre, autofocus: true, class:"form-control" %>
</div>
<div class="field col-xs-12 col-sm-6 col-md-4 col-lg-4 form-group">
<%= f.label :apellido %>
  <%= f.text_field :apellido, class:"form-control"%>
</div>
<div class="field col-xs-12 col-sm-6 col-md-4 col-lg-4 form-group">
  <%= f.label :email %>
  <%= f.email_field :email, class:"form-control"%>
</div>

</div>

<div class="actions col-xs-12 col-sm-8 col-md-8 col-lg-8 col-sm-offset-2 col-md-offset-2 col-lg-offset-2  text-center">
  <%= f.submit "Actualizar", class:"btn btn-success" %>
</div>
<% end %>
