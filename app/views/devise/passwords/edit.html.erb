<div class="well sesiones col-xs-12 col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
<h2>Recuperacion de Cuenta <i class="fa fa-lock"></i></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field form-group">
    <%= f.label :password, "Nueva Contraseña" %>
    <% if @minimum_password_length %>
      (<%= @minimum_password_length %> caracteres minimos)
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off" ,class:"form-control"%>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, "Confirmar nueva Contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control" %>
  </div>

  <div class="actions">
    
     
    
    <button type="submit" class="btn btn-success btn-block">
      Cambiar contraseña <i class="fa fa-unlock"></i>  
    </button>

  </div>
<% end %>
</div>